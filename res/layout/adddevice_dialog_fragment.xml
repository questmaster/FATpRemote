<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_adddev_name" android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/dialog_adddev_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:inputType="text">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_adddev_ip" android:paddingTop="8dp"/>

    <EditText
        android:id="@+id/dialog_adddev_ip_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:inputType="textNoSuggestions"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_adddev_note" android:padding="8dp"/>

</LinearLayout>